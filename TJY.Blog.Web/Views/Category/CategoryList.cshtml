@*首页-文章分类列表*@
@model List<TJY.Blog.Model.Category>

<p>文章分类</p>
<hr>
@if (Model.Count<=0)
{
  <div>暂时没有分类哦~</div>
}
else
{
  <ul>
    @foreach (var category in Model)
    {
      <li><a href="/Search/ArticlesByCategory/@category.ID)" class="layui-btn layui-btn-normal">@(category.Name) (@category.ArticleCount)</a></li>
    }
  </ul>
}
