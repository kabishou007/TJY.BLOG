@model TJY.Blog.Model.Account

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <title>TJY Blog 账号管理</title>
  <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
  <link href="~/Content/css/admin.account.index.css" rel="stylesheet" />
</head>

<body>
  <div class="layui-form">
    <div class="header-img">
      <img src="@Model.Image" />
    </div>
    <div class="account-info">
      <div class="layui-form-item">
        <label class="layui-form-label">登录名</label>
        <div class="layui-input-block">
          <input type="text" name="loginname" class="layui-input" disabled value="@Model.LoginName">
        </div>
      </div>
      <div class="layui-form-item">
        <label class="layui-form-label">昵称</label>
        <div class="layui-input-block">
          <input type="text" name="loginname" class="layui-input" disabled value="@Model.NickName">
        </div>
      </div>
      <div class="layui-form-item">
        <label class="layui-form-label">邮箱</label>
        <div class="layui-input-block">
          <input type="text" name="loginname" class="layui-input" disabled value="@Model.Email">
        </div>
      </div>
      <div class="layui-form-item layui-form-text">
        <label class="layui-form-label">人生信条</label>
        <div class="layui-input-block">
          <textarea class="layui-textarea" disabled>@Model.Motto</textarea>
        </div>
      </div>
      <div class="layui-form-item">
        <div class="layui-input-block">
          <button id="btnEdit" class="layui-btn">编辑信息</button>
        </div>
      </div>
    </div>
  </div>

  <script src="~/Content/layui/lay/dest/layui.all.js"></script>
  <script src="~/Content/js/admin.account.index.js" charset="gbk"></script>
</body>
</html>

